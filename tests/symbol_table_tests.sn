// Duplicate declarations
u8 x := 10;
u8 x := 20; // ERR

// Shadowing
u8 y := 5;
{
    u8 y := 7; // OK
    print y;   // prints 7
}
print y;       // prints 5

// Use of undeclared variable
foo := 123; // ERR

// OK
func SUM(a: u8, b: u8) returns (result: u8) {
    result := a + b;
}

// Redeclaring parameter inside function
func BAD(param: u8) {
    u8 param := 5; // ERR
}

func BAD_NAMES(a : u8, a : u8) {
    // err from duplicate parameter names
}

// even though y is not defined in the function scope, it is defined in parent (global) scope above
func Valid(x: u8) returns (out: u8) {
    y := x + 1;
    out := y;
}

// Loop variable scoping
for (mut u8 i := 0; i < 3; i := i + 1) {
    print i;
}
print i; // ERR undefined
