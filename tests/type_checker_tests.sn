// Valid basic declarations
mut u8 x := 0;
mut u8 y := 3;
bool condition := true;
f64 pi := 3.14159;
String hello := "world";
u8 my_char := 'A';

// Type mismatch tests (should all error)
mut u8 a := 3.14;             // Float to u8
bool b := 5;                 // Int to bool
u8 c := "string";            // String to u8
f64 d := true;               // Bool to float

// Control flow tests
if (x < y and condition) {
    print "Valid comparison";
} else {
    if (x = y or !false) {
        print "valid";
    }
}

!5; // invalid unary operand

// Loop tests
mut u8 i;
for (i := 0; i < 5; i := i + 1) {
    print i;
    if (i % 2 = 0) {
        continue;
    }
}

// Block scope test
{
    u8 inner := 10;
    print inner;
}
inner := 5;                 // Error: out of scope

// Function tests
func ADD (a: u8, b: u8) returns (result: u8) {
    result := a + b;
    return result;             // Explicit return
}

// Function call tests
u8 sum := ADD(100, 200);
ADD(true, false); // true and false will be casted to 1 and 0

// Type conversion tests
mut f64 float_val := 3.14;
u8 int_val := float_val;

bool b1 := true;
bool b2 := false;
bool b3 := b1 and b2;
bool b4 := b1 or b2;
bool b5 := 1 and true;

// Nested loops and breaks
for (mut u8 j := 0; j < 10; j := j + 1) {
    while (true) {
        if (j = 5) {
            break;
        }
    }
}
break;

// Shadowing test
{
    u8 shadow := 10;
    {
        u8 shadow := 20;
    }
}

// Void function test
func LOG (message: String) {
    print message;
    return "something";     // Invalid return
}

